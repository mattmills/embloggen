<h1>New draft from storm</h1>

<textarea rows="<%= @reply_chain.count * 4 %>" cols="80">
<%= @draft %>
</textarea>

<table>
  <tr>
    <td><%= @root.original_timestamp %></td>
    <td><%= @root.text %></td>
  </tr>

  <% @reply_chain.each do |tweet| %>
    <tr>
      <td><%= tweet.original_timestamp %></td>
      <td><%= tweet.text %></td>
    </tr>
  <% end %>
</table>
